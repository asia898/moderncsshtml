        color: green;
      }

****************** id selector ****************
#green-heading{
        color: green;
      }

.green-heading{
        color: green;
      }


naming conventions

/* Multiple selectors */
    #welcome, #about, h2{
      border: 1px solid #ccc;
      padding: 10px;
      margin-bottom: 5px;
    }

